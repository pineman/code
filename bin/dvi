#!/bin/sh

xrandr --output HDMI2 --primary --mode 1440x900 --pos 0x0 --output LVDS1 --off --output HDMI1 --off --output VGA1 --off
#feh --no-fehbg --bg-fill "$HOME/.background.jpg"
xset -dpms
nmcli radio wifi off
keyboard
pactl set-sink-volume @DEFAULT_SINK@ 80%
[[ "$XSESSION" == "i3" ]] && i3-msg restart
