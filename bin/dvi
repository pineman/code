#!/bin/sh

xrandr --output LVDS1 --off --output DP1 --off --output DP2 --off --output DP3 --off --output HDMI1 --off --output HDMI2 --off --output HDMI3 --off --output VGA1 --mode 1366x768 --pos 0x0 --primary --rotate normal --output VIRTUAL1 --off
xrandr --output LVDS1 --off --output DP1 --off --output DP2 --off --output DP3 --off --output HDMI1 --off --output HDMI2 --mode 1440x900 --pos 1366x0 --rotate left --output HDMI3 --off --output VGA1 --primary --mode 1366x768 --pos 0x0 --rotate normal --output VIRTUAL1 --off
#feh --no-fehbg --bg-fill "$HOME/.background.jpg"
xset -dpms
nmcli radio wifi off
keyboard
pactl set-sink-volume @DEFAULT_SINK@ 80%
