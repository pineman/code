#!/bin/sh

xrandr --output HDMI1 --mode 1920x1080 --pos 1366x0 --rotate normal --output LVDS1 --primary --mode 1366x768 --pos 0x0 --rotate normal
xrandr --output HDMI1 --set "Broadcast RGB" "Full"
#feh --no-fehbg --bg-fill "$HOME/.background.jpg"
pactl set-card-profile 0 output:hdmi-stereo
xset -dpms
