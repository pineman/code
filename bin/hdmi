#!/bin/bash

xrandr --output HDMI1 --mode 1920x1080 --pos 0x0 --rotate normal --output LVDS1 --primary --mode 1366x768 --pos 277x1080 --rotate normal --output VGA1 --off
feh --no-fehbg --bg-fill "$HOME/.background.jpg"
pactl set-card-profile 0 output:hdmi-stereo
xset -dpms
[[ "$XSESSION" == "i3" ]] && i3-msg restart
